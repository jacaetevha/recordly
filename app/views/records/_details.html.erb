<% _show_title   = defined?(show_title)   ? show_title   : true       %>
<% _show_artists = defined?(show_artists) ? show_artists : true       %>
<% _show_songs   = defined?(show_songs)   ? show_songs   : true       %>
<% _size         = defined?(size)         ? size         : 'col-xs-7' %>

<div class='<%= _size %> single-record-details'>
  <% if _show_title %>
    <h3>
      <%= favorite_widget record, favorite_record_path(record) %>
      <%= record.title %>
      <%= link_to edit_record_path(record) do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true">
        </span>
      <% end %>
    </h3>
  <% end %>

  <% if _show_artists %>
    <p>
      by:
      <span class='artist'>
        <%= render partial: 'inline_artists', locals: { record: record } %>
      </span>
    </p>
  <% end %>

  <% if _show_songs %>
    <p>
      <% record.songs.each_with_index do |song| %>
        <div class='row song'>
          <div class='col-xs-1'><%= song.ordinal %></div>
          <div class='col-xs-2 time'>2:33</div>
          <div class='col-xs-6 title'>
            <%= favorite_widget song, favorite_record_song_path(record, song) %>
            <%= link_to song.title, record_song_path(record, song) %>
          </div>
        </div>
      <% end %>
    </p>
  <% end %>
</div>
