<h3>
  <%= favorite_widget @artist, artist_path(@artist) %>
  <%= @artist.name %>
  <%= link_to edit_artist_path(@artist) do %>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true">
    </span>
  <% end %>
</h3>

<p>
  <% @artist.songs_by_record.each do |record, songs| %>
    <%= render partial: 'shared/record_header', locals: { record: record } %>
    <% songs.each do |song| %>
      <div class='row song'>
        <div class='col-xs-1'><%= song.ordinal %></div>
        <div class='col-xs-2 time'>2:33</div>
        <div class='col-xs-6 title'>
          <%= favorite_widget song, favorite_record_song_path(record, song) %>
          <%= link_to song.title, record_song_path(song.record, song) %>
        </div>
      </div>
    <% end %>
    <br />
  <% end %>
</p>

<%= link_to 'Add Record', new_record_path(artist_ids: [@artist.id]), class: 'btn btn-primary' %>
